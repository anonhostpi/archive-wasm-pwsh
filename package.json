{
  "name": "archive-wasm",
  "main": "src/archive.mjs",
  "type": "module",
  "author": "Vitor Vasconcellos",
  "version": "0.0.1",
  "license": "GPL-3.0-or-later",
  "engines": {
    "node": ">=18"
  },
  "description": "LibArchive compiled to WASM with a idiomatic JS api",
  "scripts": {
    "test": "ava",
    "wasm": "./docker/wasm.sh",
    "build": "tsc && npm run wasm",
    "format": "eslint . --ext .js,.jsx,.mjs --rule 'prettier/prettier: off' --max-warnings 0 --fix --cache && prettier --write --log-level=warn '**/*.{js,mjs,json}'",
    "editorconfig": "curl -sSLOJ 'https://raw.githubusercontent.com/jokeyrhyme/standard-editorconfig/main/.editorconfig'"
  },
  "ava": {
    "timeout": "2m",
    "files": [
      "test/**/*"
    ],
    "extensions": {
      "mjs": true
    }
  },
  "prettier": {
    "semi": false,
    "endOfLine": "lf",
    "printWidth": 99,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "browser": false,
      "commonjs": false,
      "shared-node-browser": false
    },
    "rules": {
      "no-void": [
        "error",
        {
          "allowAsStatement": true
        }
      ],
      "no-proto": "error",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          },
          "newlines-between": "always"
        }
      ],
      "license-header/header": [
        "error",
        "PREAMBLE"
      ],
      "standard/no-callback-literal": "off"
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
      "@babel",
      "license-header"
    ],
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:import/recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.mjs"
        ],
        "parserOptions": {
          "babelOptions": {
            "presets": [
              [
                "@babel/preset-env",
                {
                  "shippedProposals": true
                }
              ]
            ]
          }
        }
      },
      {
        "files": [
          "src/wasm/libarchive.mjs"
        ],
        "rules": {
          "license-header/header": "off"
        }
      }
    ],
    "parserOptions": {
      "sourceType": "module",
      "requireConfigFile": false
    }
  },
  "devDependencies": {
    "@babel/core": "^7.22.19",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/eslint-plugin": "^7.22.10",
    "@babel/preset-env": "^7.22.15",
    "@types/node": "^20.6.0",
    "ava": "^5.3.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-license-header": "^0.6.0",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "3.0.3",
    "typescript": "^5.2.2"
  }
}
