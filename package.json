{
  "name": "archive-wasm",
  "main": "src/archive.mjs",
  "type": "module",
  "bugs": {
    "url": "https://github.com/spacedriveapp/archive-wasm/issues"
  },
  "author": "VÃ­tor Vasconcellos",
  "version": "1.5.2",
  "license": "GPL-3.0-or-later",
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://github.com/spacedriveapp/archive-wasm#readme",
  "keywords": [
    "wasm",
    "tar",
    "zip",
    "zst",
    "gzip",
    "zstd",
    "unzip",
    "archive",
    "libarchive"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spacedriveapp/archive-wasm.git"
  },
  "description": "LibArchive compiled to WASM with a idiomatic JS api",
  "scripts": {
    "predocs": "npm run clean",
    "docs": "typedoc --plugin typedoc-plugin-markdown --hideBreadcrumbs --hideInPageTOC --readme none --githubPages false --disableSources",
    "prelint": "eslint ./src --ext .js,.ts,.mjs,.d.ts,.d.mts --cache",
    "lint": "tsc --noEmit --emitDeclarationOnly false",
    "preformat": "eslint . --ext .js,.ts,.mjs,.d.ts,.d.mts --cache --rule 'prettier/prettier: off' --max-warnings 0 --fix",
    "format": "prettier --write --log-level=warn '**/*.{js,ts,mjs,json,d.ts,d.mts,md}'",
    "clean": "git clean -qfX ./src",
    "build:wasm": "./wasm/build.sh",
    "prebuild:js": "npm run prelint",
    "build:js": "tsc",
    "postbuild:js": "npm run format",
    "prebuild": "npm run docs",
    "build": "conc -c auto --timings --kill-others-on-fail 'npm:build:*'",
    "postbuild": "npm run format",
    "test": "test/setupAndRun.sh",
    "prebuildtest": "npm run build",
    "buildtest": "npm run test",
    "prepublishOnly": "npm run buildtest",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "editorconfig": "curl -sSLOJ 'https://raw.githubusercontent.com/jokeyrhyme/standard-editorconfig/main/.editorconfig'"
  },
  "ava": {
    "timeout": "2s",
    "files": [
      "test/*"
    ],
    "extensions": {
      "mjs": true
    }
  },
  "prettier": {
    "semi": false,
    "endOfLine": "lf",
    "printWidth": 99,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "browser": false,
      "commonjs": false,
      "shared-node-browser": false
    },
    "rules": {
      "no-void": [
        "error",
        {
          "allowAsStatement": true
        }
      ],
      "no-proto": "error",
      "valid-jsdoc": "off",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          },
          "newlines-between": "always"
        }
      ],
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "\\libarchive.mjs$"
          ]
        }
      ],
      "license-header/header": [
        "error",
        "PREAMBLE"
      ],
      "jsdoc/require-returns-check": "off",
      "standard/no-callback-literal": "off"
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
      "@babel",
      "license-header",
      "eslint-plugin-local-rules"
    ],
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:import/recommended",
      "plugin:prettier/recommended",
      "plugin:jsdoc/recommended-typescript-flavor"
    ],
    "settings": {
      "jsdoc": {
        "mode": "typescript",
        "tagNamePreference": {
          "typicalname": "typicalname"
        }
      }
    },
    "overrides": [
      {
        "files": [
          "*.mjs"
        ],
        "parserOptions": {
          "babelOptions": {
            "presets": [
              [
                "@babel/preset-env",
                {
                  "shippedProposals": true
                }
              ]
            ]
          }
        }
      },
      {
        "env": {
          "node": false,
          "es2022": true,
          "shared-node-browser": true
        },
        "files": [
          "src/**/*.mjs"
        ],
        "excludedFiles": [
          "src/fs.mjs",
          "src/wasm/libarchive.mjs"
        ]
      },
      {
        "files": [
          "src/wasm/libarchive.mjs",
          "src/wasm/libarchive.d.mts"
        ],
        "rules": {
          "license-header/header": "off"
        }
      },
      {
        "files": [
          "*.ts",
          "*.d.ts",
          "*.d.mts"
        ],
        "rules": {
          "no-void": "off",
          "@typescript-eslint/no-extra-semi": "off",
          "@typescript-eslint/unbound-method": [
            "error",
            {
              "ignoreStatic": true
            }
          ],
          "@typescript-eslint/no-explicit-any": [
            "error",
            {
              "fixToUnknown": true
            }
          ],
          "no-use-before-define": "off",
          "@typescript-eslint/no-use-before-define": [
            "error",
            {
              "ignoreTypeReferences": true
            }
          ],
          "@typescript-eslint/explicit-function-return-type": [
            "error",
            {
              "allowConciseArrowFunctionExpressionsStartingWithVoid": true
            }
          ]
        },
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking",
          "plugin:@typescript-eslint/strict",
          "plugin:import/typescript"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        }
      },
      {
        "files": [
          "*.d.ts",
          "*.d.mts"
        ],
        "rules": {
          "jsdoc/require-returns": "off",
          "jsdoc/require-yields-check": "off",
          "local-rules/disallow-jsdoc-typedef": "error",
          "padding-line-between-statements": [
            "error",
            {
              "blankLine": "always",
              "prev": "*",
              "next": "export"
            }
          ]
        }
      },
      {
        "files": [
          "src/wasm/enums.d.mts"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": "off"
        }
      }
    ],
    "parserOptions": {
      "sourceType": "module",
      "requireConfigFile": false
    },
    "ignorePatterns": [
      "src/wasm/libarchive.mjs"
    ]
  },
  "clean-package": {
    "indent": 2,
    "remove": [
      "ava",
      "scripts",
      "prettier",
      "eslintConfig",
      "clean-package",
      "devDependencies"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/eslint-plugin": "^7.22.10",
    "@babel/preset-env": "^7.22.20",
    "@types/node": "^20.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "ava": "^5.3.1",
    "clean-package": "^2.2.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-license-header": "^0.6.0",
    "eslint-plugin-local-rules": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "3.0.3",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.2.2"
  }
}
