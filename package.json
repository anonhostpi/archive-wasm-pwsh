{
  "name": "archive-wasm",
  "main": "src/archive.mjs",
  "type": "module",
  "bugs": {
    "url": "https://github.com/spacedriveapp/archive-wasm/issues"
  },
  "author": "VÃ­tor Vasconcellos",
  "version": "1.1.0",
  "license": "GPL-3.0-or-later",
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://github.com/spacedriveapp/archive-wasm#readme",
  "keywords": [
    "wasm",
    "tar",
    "zip",
    "zst",
    "gzip",
    "zstd",
    "unzip",
    "archive",
    "libarchive"
  ],
  "repository": "github:spacedriveapp/archive-wasm",
  "description": "LibArchive compiled to WASM with a idiomatic JS api",
  "scripts": {
    "test": "test/test.sh",
    "prelint": "eslint ./src --ext .js,.mjs --cache",
    "lint": "tsc --noEmit",
    "preformat": "eslint . --ext .js,.mjs --cache --rule 'prettier/prettier: off' --max-warnings 0 --fix",
    "format": "prettier --write --log-level=warn '**/*.{js,mjs,json}'",
    "clean": "git clean -qfX ./src",
    "prebuild": "npm run clean",
    "build": "npm run build:js",
    "prebuild:js": "npm run prelint",
    "build:js": "tsc",
    "postbuild:js": "npm run build:wasm",
    "build:wasm": "./wasm/build.sh",
    "editorconfig": "curl -sSLOJ 'https://raw.githubusercontent.com/jokeyrhyme/standard-editorconfig/main/.editorconfig'"
  },
  "ava": {
    "timeout": "2s",
    "files": [
      "test/**/*"
    ],
    "extensions": {
      "mjs": true
    }
  },
  "prettier": {
    "semi": false,
    "endOfLine": "lf",
    "printWidth": 99,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "browser": false,
      "commonjs": false,
      "shared-node-browser": false
    },
    "rules": {
      "no-void": [
        "error",
        {
          "allowAsStatement": true
        }
      ],
      "no-proto": "error",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          },
          "newlines-between": "always"
        }
      ],
      "license-header/header": [
        "error",
        "PREAMBLE"
      ],
      "standard/no-callback-literal": "off"
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
      "@babel",
      "license-header"
    ],
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:import/recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.mjs"
        ],
        "parserOptions": {
          "babelOptions": {
            "presets": [
              [
                "@babel/preset-env",
                {
                  "shippedProposals": true
                }
              ]
            ]
          }
        }
      },
      {
        "files": [
          "src/wasm/libarchive.mjs"
        ],
        "rules": {
          "license-header/header": "off"
        }
      }
    ],
    "parserOptions": {
      "sourceType": "module",
      "requireConfigFile": false
    },
    "ignorePatterns": [
      "src/wasm/libarchive.mjs"
    ]
  },
  "clean-package": {
    "indent": 2,
    "remove": [
      "ava",
      "scripts",
      "prettier",
      "eslintConfig",
      "clean-package",
      "devDependencies"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.22.19",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/eslint-plugin": "^7.22.10",
    "@babel/preset-env": "^7.22.15",
    "@types/node": "^20.6.0",
    "ava": "^5.3.1",
    "clean-package": "^2.2.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-license-header": "^0.6.0",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "3.0.3",
    "typescript": "^5.2.2"
  }
}
